[alias]
  addci = !git add . && git commit -av
  br = branch
  bra = branch -a
  changes = diff --name-status -r
  ci = commit -v
  cia = commit -a -v
  co = checkout
  continue = rebase --continue
  ds = diff --stat
  f = "!git ls-files | grep -i"
  fixup = commit --amend -C HEAD
  fix = commit -v -m 'fix'
  hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
  # `ic` is like `ci` for dyslexics.
  ic = commit -v
  last = log -3 HEAD
  list-aliases = !git config -l | sed -n '/alias/s/alias\\.//p' | sort
  logp = log --oneline --decorate
  logpp = log --pretty=oneline
  mm = merge-me
  pull-changes = diff master master@{1}
  pull-stat-changes = diff --stat master master@{1}
  pushf = push --force-with-lease
  push-f = push --force-with-lease
  rb = branch
  st = status -sb
[color]
  ui = true
[core]
  editor = vim -f
  excludesfile = /home/xavier/.gitignore_global
